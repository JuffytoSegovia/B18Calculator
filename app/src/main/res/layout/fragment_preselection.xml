<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculadora_preseleccion_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculadora_preseleccion_description"
            android:textColor="@color/text_color_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- Ventana 1: Inicio -->
        <LinearLayout
            android:id="@+id/layoutInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombre_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutModalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerModalidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/modalidad_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextENP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/enp_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textViewENPError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutSisfoh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerSisfoh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/sisfoh_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutDepartamento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/departamento_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/buttonInfoQuintil"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_question"
                    android:contentDescription="@string/info_quintil_description"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonContinuar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/continuar"
                style="@style/Widget.MaterialComponents.Button"/>

            <Button
                android:id="@+id/buttonLimpiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/limpiar"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>

        <!-- Ventana 2: Continuación -->
        <LinearLayout
            android:id="@+id/layoutContinuacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participación en Actividades Extracurriculares - Máximo 10 puntos:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/checkboxConcursoNacional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(CE) Concurso Escolar Nacional (1°, 2º o 3º Puesto Etapa Nacional) o Concurso Escolar Internacional - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxConcursoParticipacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(CEP) Participación en la Etapa Nacional de los Concursos Escolares Nacionales - 2 puntos"/>

            <CheckBox
                android:id="@+id/checkboxJuegosNacionales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(JD) Juegos Deportivos Escolares (1°, 2º o 3° puesto en Etapa Nacional) - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxJuegosParticipacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(JDP) Participación en la Etapa Nacional de los Juegos Deportivos Escolares Nacionales - 2 puntos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Otras condiciones priorizables - Máximo 25 puntos:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/checkboxDiscapacidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(D) Discapacidad - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxBomberos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(B) Bomberos activos e hijos de bomberos - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxVoluntarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(V) Voluntarios reconocidos por el MIMP - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxComunidadNativa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(IA) Pertenencia a Comunidad Nativa Amazónica o Población Afroperuana - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxMetalesPesados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(PEM) Población expuesta a metales pesados y otras sustancias químicas - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxPoblacionBeneficiaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(PD) Población beneficiaria (Res. Suprema Nº 264-2022-JUS) - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxOrfandad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(OR) Población beneficiaria de la Ley N° 31405 (orfandad) - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxDesproteccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(DF) Desprotección familiar - 5 puntos"/>

            <CheckBox
                android:id="@+id/checkboxAgenteSalud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(ACS) Agente Comunitario de Salud - 5 puntos"/>

            <LinearLayout
                android:id="@+id/layoutLenguaOriginaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerLenguaOriginaria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="Priorización de lengua originaria"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/buttonInfoLengua"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_question"
                    android:contentDescription="Información sobre lenguas originarias"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonCalcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calcular"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>

        <!-- Ventana 3: Resultado (continuación) -->
        <LinearLayout
            android:id="@+id/layoutResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewNombreResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/buttonPuntajeResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desglose del puntaje:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewDesglosePuntaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewFormula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewPuntajeMaximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewMensajeAnimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/buttonReiniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reiniciar"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>